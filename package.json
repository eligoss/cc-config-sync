{
  "name": "cc-config-sync",
  "version": "0.1.0",
  "description": "Sync Claude Code configurations across machines using a git-tracked repository",
  "type": "module",
  "bin": {
    "cc-config-sync": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node scripts/prepend-shebang.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "prepublishOnly": "npm run build && npm run typecheck && npm test",
    "prepare": "husky"
  },
  "keywords": [
    "claude",
    "claude-code",
    "config",
    "sync",
    "dotfiles",
    "cli"
  ],
  "author": "Anton Borodulin",
  "license": "MIT",
  "homepage": "https://github.com/eligoss/cc-config-sync#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eligoss/cc-config-sync.git"
  },
  "bugs": {
    "url": "https://github.com/eligoss/cc-config-sync/issues"
  },
  "dependencies": {
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.13.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
